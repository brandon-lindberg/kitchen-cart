<h1>New Food Cart</h1>
<div class="container m-5 p-4">
  <%= simple_form_for [ @food_cart ] do |f| %>
    <%= f.input :name, label:"Food Cart Name" %>
    <%= f.input :phone_number, label:"Phone Number" %>
    <%= f.input :category, label:"Food Category" %>
    <%= f.input :cart_description, label:"Food Cart Description" %>
    <%= f.input :photo, as: :file, label:"Photo Upload" %>
    <br>
    <br>
    <%= f.button :submit, label:"Create Food Cart", class: "btn btn-primary" %>
  <% end %>
</div>

<%= render partial: 'shared/react_entry', locals: {data: {food_cart: @food_cart, user: current_user}.to_json, content_type: "NEW_FOOD_CART"} %>
